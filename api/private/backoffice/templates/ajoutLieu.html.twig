<body>
<h2>Nouveau lieu</h2>
<!--TODO: ajouter des informations sur les champs pour l'utilisateur-->
<form role="form" method = "post" action="http://admin.findyourway.local/admin/lieu">
    <div class="form-group">
        <label for="nom_lieu"> Nombre:* </label>
        <input class="form-control" type="text" name="nom_lieu" id="nom_lieu">
    </div>
    <label for="lat"> Latitude:* </label> <input type="text" name="lat" id="lat"><br>
    <label for="lng"> Longitude:* </label> <input type="text" name="lng" id="lng"><br>
    <label for="indication"> Indication:* </label> <input type="text" name="indication" id="indication"><br>
    <label for="description"> Description: </label><input type="text" name="description" id="description"><br>
    <label for="Image"> Image: </label> <input type="text" name="image" id="Image"><br>
    <label for="indice1"> Indice1:* </label> <input type="text" name="indice1" id="indice1"><br>
    <label for="indice2"> Indice2:* </label> <input type="text" name="indice2" id="indice2"><br>
    <label for="indice3"> Indice3:* </label> <input type="text" name="indice3" id="indice3"><br>
    <label for="indice4"> Indice4:* </label> <input type="text" name="indice4" id="indice4"><br>
    <label for="indice5"> Indice5:* </label> <input type="text" name="indice6" id="indice7"><br>
    <label for="dest_final"> Ajouter en tant que destination finale:* </label>
    <select name="dest_finale" id="dest_finale">
        <option value="0" selected>No</option>
        <option value="1">oui</option>
    </select><br>
<input type="submit" value="Ajouter">
</form>

